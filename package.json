{
  "name": "crypto-erp",
  "version": "0.1.0",
  "description": "Crypto-native ERP with Verifactu electronic invoicing and AI integration for the Spanish market",
  "author": "Federico",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:api": "npm run db:generate && cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "dev": "turbo run dev",
    "dev:api": "cd apps/api && npm run start:dev",
    "dev:web": "cd apps/web && ng serve",
    "dev:worker": "cd apps/worker && npm run start:dev",
    "start": "turbo run start",
    "start:api:prod": "node dist/apps/api/src/main.js",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:cov": "turbo run test:cov",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "postinstall": "npm run db:generate",
    "db:generate": "prisma generate --schema=libs/database/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=libs/database/prisma/schema.prisma",
    "db:migrate:prod": "prisma migrate deploy --schema=libs/database/prisma/schema.prisma",
    "db:push": "prisma db push --schema=libs/database/prisma/schema.prisma",
    "db:seed": "prisma db seed --schema=libs/database/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=libs/database/prisma/schema.prisma",
    "db:reset": "prisma migrate reset --schema=libs/database/prisma/schema.prisma",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "ollama:pull": "docker exec crypto-erp-ollama ollama pull llama3.1:8b",
    "prepare": "husky install"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@bull-board/api": "^5.21.0",
    "@bull-board/express": "^5.21.0",
    "@google-cloud/documentai": "^8.9.0",
    "@nestjs/bull": "^10.2.0",
    "@nestjs/common": "^10.4.4",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.4",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.4",
    "@nestjs/platform-socket.io": "^11.1.10",
    "@nestjs/schedule": "^4.1.0",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/throttler": "^6.2.1",
    "@nestjs/websockets": "^11.1.10",
    "@prisma/client": "^5.20.0",
    "@sentry/node": "^10.29.0",
    "@sentry/profiling-node": "^10.29.0",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.3",
    "bullmq": "^5.16.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "decimal.js": "^10.4.3",
    "exceljs": "^4.4.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.8.2",
    "node-forge": "^1.3.2",
    "openai": "^4.68.0",
    "passport": "^0.7.0",
    "passport-azure-ad": "^4.3.5",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "passport-saml": "^3.2.4",
    "pdfkit": "^0.15.2",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.5.2",
    "rxjs": "^7.8.1",
    "soap": "^1.6.0",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "stripe": "^20.0.0",
    "uuid": "^10.0.0",
    "xmlbuilder2": "^4.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.4",
    "@types/bcrypt": "^5.0.2",
    "@types/bull": "^4.10.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.4",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/passport-saml": "^1.1.7",
    "@types/pdfkit": "^0.17.4",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prisma": "^5.20.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "turbo": "^2.1.3",
    "typescript": "^5.4.5"
  },
  "prisma": {
    "schema": "libs/database/prisma/schema.prisma",
    "seed": "ts-node libs/database/prisma/seed.ts"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.8.0"
}
